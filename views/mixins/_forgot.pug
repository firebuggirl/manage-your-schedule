mixin forgotForm()
  .form
    .row.forgot
      .col-md-6.col-md-offset-3.col-sm-12
        h1.display-4.m-b-2 Reset Password
        form(method='POST' action="/account/forgot")
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          button.btn.btn-info(type='submit') Reset
